<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <link rel="stylesheet" href="~/style.css">
    <title>CalcuCafé</title>
</head>
<body>
    <!-- Top Navigation -->
    <div class="nav-top">
        <ul>
            <li id="hamburger">
                <img src="menu.svg" width="24" height="24" alt="menu">
            </li>
            <li id="brand">
                <a href=""><img src="logo.svg" width="146" height="32" alt="CalcuCafé"></a>
            </li>
        </ul>
        <ul class="nav-profile">
            <li>
                <a href=""><img src="avatar.png" width="36" height="36" alt="avatar"></a>
            </li>
            <li>
                <a id="user-name" href="">Martín Rojas</a>
            </li>
        </ul>
    </div>
    <!-- Side Navigation Drawer -->
    <div id="nav-drawer" class="nav-side">
        <ul>
            <li class="nav-side-link">
                <a href="">
                    <img class="menu-icon" src="./icons/trending.svg" alt="">
                    Analytics
                </a>
            </li>
            <li class="nav-side-link">
                <a href="">
                    <img class="menu-icon" src="./icons/list.svg" alt="">
                    Farmers
                </a>
            </li>
            <li class="nav-side-link active-section">
                <a href="">
                    <img class="menu-icon" src="./icons/settings-active.svg" alt="">
                    Coop Settings
                </a>
            </li>
            <li class="nav-side-link">
                <a href="">
                    <img class="menu-icon" src="./icons/help.svg" alt="">
                    Help
                </a>
            </li>
        </ul>
    </div>
    <!-- Main Content -->
    <div class="main-content">
        <div class="tabs">
            <div class="tab-link tab-active"><a href="TechnicianHome">METRICS</a></div>
            <div class="tab-link"><a href="AdvancedInputs">ADVANCED INPUT</a></div>
        </div>
        <!-- List of Input Values -->
        <div class="list-item">
            <div class="list-title-value">The most common measure for coffee parchment</div>
            <form class="input-form" autocomplete="off">
                <select onchange="change()" class="input-value drop-down" id="coffeeparchment">
                    <option selected="">Choose...</option>
                    <option value="Kilograms">Kilograms</option>
                    <option value="Pounds">Pounds</option>
                    <option value="Quintales">Quintales</option>
                    <option value="Arrobas">Arrobas</option>
                    <option value="Cargas">Cargas</option>
                </select>
            </form>
        </div>
        <div class="list-item">
            <div class="list-title-value">The most common measure of length</div>
            <form class="input-form" autocomplete="off">
                <select onchange="change()" class="input-value drop-down" id="length">
                    <option selected="">Choose...</option>
                    <option value="Meters">Meters</option>
                    <option value="Feet">Feet</option>
                </select>
            </form>
        </div>
        <div class="list-item">
            <div class="list-title-value">The most common measure for the farm area</div>
            <form class="input-form" autocomplete="off">
                <select onchange="change()" class="input-value drop-down" id="farmarea">
                    <option selected="">Choose...</option>
                    <option value="Hectares">Hectares</option>
                    <option value="Manzanas">Manzanas</option>
                </select>
            </form>
        </div>
        <div class="list-item">
            <div class="list-title-value">The most common measure for input weight</div>
            <form class="input-form" autocomplete="off">
                <select onchange="change()" class="input-value drop-down" id="weight">
                    <option selected="">Choose...</option>
                    <option value="Kilograms">Kilograms</option>
                    <option value="Pounds">Pounds</option>
                </select>
            </form>
        </div>
        <div class="list-item">
            <div class="list-title-value">The most common measure for capacity</div>
            <form class="input-form" autocomplete="off">
                <select onchange="change()" class="input-value drop-down" id="capacity">
                    <option selected="">Choose...</option>
                    <option value="Liters">Liters</option>
                    <option value="Gallons">Gallons</option>
                </select>
            </form>
        </div>
        <div class="list-item">
            <div class="list-title-value">Country Currency</div>
            <form class="input-form" autocomplete="off">
                <select onchange="change()" class="input-value drop-down" id="currency">
                    <option selected="">Choose...</option>
                    <option value="Bolivian Boliviano">Bolivian Boliviano</option>
                    <option value="Brazilian Real">Brazilian Real</option>
                    <option value="Colombian Peso">Colombian Peso</option>
                    <option value="Costa Rican Colon">Costa Rican Colon</option>
                    <option value="Cuban Peso">Cuban Peso</option>
                    <option value="Guatemalan Quetzal">Guatemalan Quetzal</option>
                    <option value="Jamaican Dollar">Jamaican Dollar</option>
                    <option value="Honduran Lempira">Honduran Lempira</option>
                    <option value="Haitian Gourde">Haitian Gourde</option>
                    <option value="Mexican Peso">Mexican Peso</option>
                    <option value="Nicaraguan Cordoba">Nicaraguan Cordoba</option>
                    <option value="Peruvian Sol">Peruvian Sol</option>
                    <option value="USD">USD</option>
                    <option value="Venezuelan Bolivar">Venezuelan Bolivar</option>
                </select>
            </form>
        </div>
        <!-- Enabled Save Buttons -->
        <!-- <div class="input-buttons">
    <button class="outlined-button" type="button">DISCARD CHANGES</button>
    <button class="contained-button" type="button">SAVE</button>
    </div> -->
        <!-- Disabled Save Buttons -->
        <div class="input-buttons">
            <button class="outlined-button-disabled" type="button" onclick="press()">DISCARD CHANGES</button>
            <button class="contained-button-disabled" type="button" id="savebutton">SAVE</button>
        </div>
    </div>
    <!-- JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {

            // Collapsable Hamburger Menu
            $("#hamburger").click(function () {
                if ($("#nav-drawer").css("display") == "block") {
                    $("#nav-drawer").hide();
                    $(".main-content").css('margin-left', '0px')
                } else {
                    $("#nav-drawer").show();
                    $(".main-content").css('margin-left', '300px')
                }
            });
        });
    </script>
</body>
</html>
